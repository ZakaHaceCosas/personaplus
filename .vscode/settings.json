{
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/android": true
    },
    "terminal.integrated.suggest.enabled": true,
    "terminal.integrated.suggest.builtinCompletions": {
        "pwshCode": false,
        "pwshGit": true
    },
    "editor.fontSize": 15,
    "editor.fontVariations": true,
    "editor.wordWrap": "on",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "redhat.telemetry.enabled": false,
    "telemetry.enableCrashReporter": false,
    "gitlens.telemetry.enabled": false,
    "telemetry.telemetryLevel": 0,
    "telemetry.enableTelemetry": false,
    "files.autoSave": "off",
    "editor.fontFamily": "'JetBrains Mono', 'Roboto Mono', Consolas, 'Courier New', monospace",
    "editor.fontWeight": 400,
    "editor.fontLigatures": true,
    "window.zoomLevel": -0.5,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "trailing",
    "editor.minimap.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDelete": true,
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": true,
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnSave": false
    },
    "workbench.editor.customLabels.patterns": {
        "**/core/**": "Core library, ${filename}.${extname} @ ${dirname}",
        "**/app/**": "App layout, ${filename}.${extname}",
        "**/app/(tabs)/**": "App pages, ${filename}.${extname}",
        "**/assets/**": "Assets, ${filename}.${extname}",
        "**/assets/design/**": "Design assets, ${filename}.${extname}",
        "**/assets/fonts/**": "Fonts, ${filename}.${extname}",
        "**/assets/resources/**": "Resources, ${filename}.${extname}",
        "**/components/**": "Main components, ${filename}.${extname}",
        "**/constants/**": "Constants, ${filename}.${extname}",
        "**/hooks/**": "Hooks, ${filename}.${extname}",
        "**/translations/**": "Localization, ${filename}.${extname}",
        "**/toolkit/**": "Toolkit, ${filename}.${extname}",
        "**/toolkit/debug/**": "Debug toolkit, ${filename}.${extname}",
        "**/types/**": "TS types, ${filename}.${extname}"
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "files.associations": {
        ".easignore": "ignore"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    }
}
