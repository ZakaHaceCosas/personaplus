{
    "files.exclude": {
        "**/node_modules": false,
        "**/.git": true,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/android": false
    },
    "terminal.integrated.suggest.enabled": true,
    "terminal.integrated.suggest.builtinCompletions": {
        "pwshCode": false,
        "pwshGit": true
    },
    "editor.fontSize": 15,
    "editor.fontVariations": true,
    "editor.wordWrap": "on",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "redhat.telemetry.enabled": false,
    "files.autoSave": "off",
    "editor.fontFamily": "'JetBrains Mono', 'Roboto Mono', Consolas, 'Courier New', monospace",
    "editor.fontWeight": 500,
    "editor.fontLigatures": true,
    "window.zoomLevel": -0.5,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDelete": true,
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": true,
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnSave": false
    },
    "workbench.editor.customLabels.patterns": {
        "**/toolkit/**": "Toolkit, ${filename}.${extname}",
        "**/toolkit/design/**": "Design toolkit, ${filename}.${extname}",
        "**/toolkit/debug/**": "Debug toolkit, ${filename}.${extname}",
        "**/translations/**": "Localization, ${filename}.${extname}",
        "**/src/hooks/**": "Hooks, ${filename}.${extname}",
        "**/core/**": "Core library, ${filename}.${extname} @ ${dirname}",
        "**/assets/**": "Assets, ${filename}.${extname}",
        "**/fonts/**": "Fonts, ${filename}.${extname}",
        "**/app/**": "App pages, ${filename}.${extname}",
        "**/src/types/**": "Types, ${filename}.${extname}",
        "**/src/**": "Source components, ${filename}.${extname}"
    }
}
